{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "paths": {
      "src/*": ["src/*"],
      "@env/*": ["src/environments/*"],
      "jszip": ["node_modules/jszip/dist/jszip.min.js"]
    }
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"]
}
